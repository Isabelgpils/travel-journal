<h1 class= "pt-5 text-center">Sign Up </h1>
<%= form_with model: @signup do |form| %>
  <div class= "container">
    <div class= "pt-5 pb-5">
      <h3>First Name</h3>
      <%= form.text_field :firstname, max: 50, size: 50 %>
      <% @signup.errors.full_messages_for(:firstname).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class= "pb-5">
      <h3><%= form.label :email %><br></h3>
      <%= form.text_field :email, max: 50, size: 50 %><br>
      <% @signup.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
    <%= form.submit class: "btn btn-lg btn-warning" %>
    </div>
  </div>
<% end %>
